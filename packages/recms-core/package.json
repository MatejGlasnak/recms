{
	"name": "@blume/recms-core",
	"version": "0.1.0",
	"description": "Core infrastructure for ReCMS - registries, providers, auth, and types",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./providers": "./dist/providers/index.js",
		"./registries": "./dist/registries/index.js",
		"./auth": "./dist/auth/index.js",
		"./hooks": "./dist/hooks/index.js",
		"./types": "./dist/types/index.js"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"LICENSE-MIT.md"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"type-check": "tsc --noEmit",
		"lint": "eslint src --ext .ts,.tsx",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0",
		"@refinedev/core": "^5.0.0"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.90.20",
		"zustand": "^5.0.11"
	},
	"devDependencies": {
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"tsup": "^8.0.0",
		"typescript": "^5",
		"vitest": "^2.0.0"
	},
	"keywords": [
		"cms",
		"admin",
		"refine",
		"typescript",
		"react"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/blume/recms",
		"directory": "packages/recms-core"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	}
}