{
	"name": "@blume/recms-ui",
	"version": "0.1.0",
	"description": "UI components and blocks for ReCMS",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./pages": "./dist/pages/index.js",
		"./blocks/*": "./dist/blocks/*/index.js",
		"./columns/*": "./dist/columns/*/index.js",
		"./fields/*": "./dist/fields/*/index.js",
		"./filters/*": "./dist/filters/*/index.js",
		"./layouts/*": "./dist/layouts/*/index.js",
		"./components": "./dist/components/index.js",
		"./renderers": "./dist/renderers/index.js"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"LICENSE-MIT.md"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"type-check": "tsc --noEmit",
		"lint": "eslint src --ext .ts,.tsx",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0",
		"@refinedev/core": "^5.0.0",
		"@refinedev/react-hook-form": "^5.0.0"
	},
	"dependencies": {
		"@blume/recms-core": "workspace:*",
		"@tanstack/react-query": "^5.90.20",
		"@tanstack/react-table": "^8.21.3",
		"react-hook-form": "^7.71.1",
		"date-fns": "^4.1.0"
	},
	"devDependencies": {
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"tsup": "^8.0.0",
		"typescript": "^5",
		"vitest": "^2.0.0"
	},
	"keywords": [
		"cms",
		"admin",
		"ui",
		"components",
		"refine",
		"typescript",
		"react"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/blume/recms",
		"directory": "packages/recms-ui"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	}
}